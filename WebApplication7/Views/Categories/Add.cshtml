@model Category
@{
    ViewBag.Title = "Add";
}

<h2>Add</h2>


@using (Html.BeginForm("Add", "Categories", FormMethod.Post, new { @class = "Form" }))
{
    <div class="form-group">
        @Html.LabelFor(f=> Model.Name)
        @Html.TextBoxFor(f => Model.Name, new { @class = "form-control"})        
    </div>
        
    <input type="submit" class="btn-default" name="name" value="Add" />
}


